<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <!-- INGV Terremoti Logo -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logo_card"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/social_media_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/transparent">

        <ImageView
            android:id="@+id/ingv_terremoti_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingHorizontal="4dp"
            android:paddingBottom="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ingv_terremoti" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Social Media Icons Container with Rounded Borders -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/social_media_card"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/social_media_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- Facebook -->
            <ImageButton
                android:id="@+id/facebook_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary"
                android:contentDescription="Facebook"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_facebook"
                app:tint="@color/white" />
            <!-- Twitter -->
            <ImageButton
                android:id="@+id/twitter_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary"
                android:contentDescription="Twitter"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_twitter"
                app:tint="@color/white" />
            <!-- YouTube -->
            <ImageButton
                android:id="@+id/youtube_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary"
                android:contentDescription="YouTube"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_youtube"
                app:tint="@color/white" />
            <!-- Instagram -->
            <ImageButton
                android:id="@+id/instagram_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary"
                android:contentDescription="Instagram"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_instagram"
                app:tint="@color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
